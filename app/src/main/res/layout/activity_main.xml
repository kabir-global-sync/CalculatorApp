<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topImage"
        android:layout_width="408dp"
        android:layout_height="391dp"
        android:scaleType="centerCrop"
        android:src="@drawable/up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="405dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:src="@drawable/down"
        app:layout_constraintBottom_toBottomOf="@+id/buttonGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Grid of buttons on top of the background -->
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:columnCount="4"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_clearid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="C"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_openparenid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="("
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_closeparenid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text=")"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_divid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="/"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:backgroundTint="@color/sidecolor"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_7id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="7"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_8id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="8"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_9id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="9"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_mulid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="Ã—"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:backgroundTint="@color/sidecolor"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_1id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="1"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_2id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="2"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_3id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="3"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_subid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="-"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:backgroundTint="@color/sidecolor"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_4id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="4"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_5id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="5"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_6id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="6"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_addid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/sidecolor"
            android:text="+"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_acid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="D"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="32sp" />
        <Button
            android:id="@+id/btn_0id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="0"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_dotid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:text="."
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />
        <Button
            android:id="@+id/btn_equalid"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/sidecolor"
            android:text="="
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:textSize="@dimen/textsize" />

            </GridLayout>

    <TextView
        android:id="@+id/equationTextId"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text=""
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="88dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/equationTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
